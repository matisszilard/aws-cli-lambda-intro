root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

; Golang
[*.go]
indent_style = tab
indent_size = 4

; HTML
[*.html]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

; Markdown
[*.md]
trim_trailing_whitespace = false
